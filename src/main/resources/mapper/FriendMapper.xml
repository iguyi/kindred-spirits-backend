<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guyi.kindredspirits.mapper.FriendMapper">

    <resultMap id="BaseResultMap" type="com.guyi.kindredspirits.model.domain.Friend">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="activeUserId" column="activeUserId" jdbcType="BIGINT"/>
        <result property="passiveUserId" column="passiveUserId" jdbcType="BIGINT"/>
        <result property="relationStatus" column="relationStatus" jdbcType="INTEGER"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="isDelete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,activeUserId,passiveUserId,
        relationStatus,createTime,updateTime,
        isDelete
    </sql>

    <select id="count" resultType="java.lang.Long">
        select concat(id)
        from `friend`
        where (`activeUserId` = 1 and `passiveUserId` = 2)
           or (`activeUserId` = 2 and `passiveUserId` = 1) and `relationStatus` in (0, 3, 4, 5, 6)
    </select>
</mapper>
